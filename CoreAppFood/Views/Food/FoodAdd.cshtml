@model CoreAppFood.Models.AddProduct

@{
    ViewData["Title"] = "FoodAdd";
    Layout = "~/Views/Shared/__Layout.cshtml";
}

<h1>Food Adding Page</h1>
<br />

@using (Html.BeginForm("FoodAdd","Food",FormMethod.Post))
{
    @Html.Label("Name")
    @Html.TextBoxFor(x => x.Name, new {@class = "form-control"})
    <br />

    @Html.Label("Price")
    @Html.TextBoxFor(x => x.Price, new {@class = "form-control"})
    <br />

    @Html.Label("Stock")
    @Html.TextBoxFor(x => x.Stock, new {@class = "form-control"})
    <br />


    @Html.Label("Choose Image")
    @Html.TextBoxFor(x => x.ImageUrl, new {@class = "form-control"})
    <br />

    @Html.Label("Description")
    @Html.TextAreaFor(x => x.Desc , new {@class = "form-control"})
    <br />

    @Html.Label("Categories")
    @Html.DropDownListFor(x=> x.CategoryId,(List<SelectListItem>)ViewBag.V1,new {@class = "form-control"})
    <br />

    <button class="btn btn-primary" style="background-color:blueviolet">Save</button>

    
}


